<div class="m-3">
  <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary btn-sm mt-3" %>
</div>

<div class="container mt-4 mb-4 bg-light p-4 border rounded">
  <div class="mb-3 text-center">
    <h1>Add a new restaurant</h1>
  </div>
  <div class="row">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
      <%= f.submit class: "btn btn-primary mt-4" %>
    <% end %>
  </div>
</div>

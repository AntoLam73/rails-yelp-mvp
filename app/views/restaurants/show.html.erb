<div class="mx-3">
  <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary btn-sm mt-3" %>
</div>

<div class="container mt-2 mb-4 p-4">
  <div class="mb-3 pt-3 text-center bg-light border rounded">
    <h1><%= @restaurant.name %></h1>
    <p>Location: <%= @restaurant.address %></p>
    <p>Phone Number: <%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category %></p>
  </div>

  <div class="mb-3 p-3 bg-light border rounded">
    <h3>Reviews:</h3>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content %> - Rating: <%= review.rating %></li>
      <% end %>
    </ul>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-3" %>
  </div>
</div>
